void tampilkanA()
{
    cout <<"matrix A :"<<endl;
    for(int i=0; i<3; i++)
    {
        for(int j=0; j<3; j++)
        {
            cout<<setw(4)<<"["<<A[i][j]<<"]";
        }
        cout<<endl;
    }
    cout<<endl;
}



void tampilB()
