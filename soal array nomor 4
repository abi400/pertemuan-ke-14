#include <iostream>
#include<iomanip>
using namespace std

int A[3][3];
int B[3][3];
int C[3][3];

//fungsi input matriks A

void isiA()
{
    cout <<"Masukkan Nilai Matriks A :"<<endl;
    for(int i=0; i<3; i++)
    {
        for(int j=0; j<3; j++)
        {
             cout<<"A "<<"["<<i+1<<"] ["<<j+1<<"] = ";
             cin >>A[i][j];
        }
        cout <<endl;
    }
}

