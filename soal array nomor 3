#include <iostream>

using namespace std;

int hasil;

int tambahsatu (int X){
    int hasil;
    hasil = X+1;
    return hasil;
}

int main(){
    int bilangan, hasil;
    cout<<"masukkan sebuah bilangan bulat :"<<endl;
    cin>>bilangan;
    hasil = tambahsatu(bilangan);

    cout<<"nilai akhir :"<<hasil;

    return 0;
}



